# Interactive Feedback MCP - 環境變數配置範例
# 複製此檔案為 .env 並根據需要修改設定

# =============================================================================
# 基本配置
# =============================================================================

# Python 環境設定
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# GUI 顯示配置
# =============================================================================

# X11 顯示設定（Linux/macOS）
DISPLAY=:0

# Qt 平台設定
QT_QPA_PLATFORM=xcb
QT_X11_NO_MITSHM=1

# =============================================================================
# Docker 配置
# =============================================================================

# Docker 映像名稱
DOCKER_IMAGE_NAME=interactive-feedback-mcp

# Docker 容器名稱
DOCKER_CONTAINER_NAME=interactive-feedback-mcp

# =============================================================================
# 應用程式配置
# =============================================================================

# 日誌等級（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 資料目錄
DATA_DIR=./data

# 日誌目錄
LOGS_DIR=./logs

# =============================================================================
# 開發模式配置
# =============================================================================

# FastMCP 開發伺服器埠
DEV_PORT=8000

# 開發模式啟用
DEV_MODE=false

# =============================================================================
# 安全配置
# =============================================================================

# 允許的主機（用於生產環境）
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# 效能配置
# =============================================================================

# 記憶體限制（MB）
MEMORY_LIMIT=1024

# CPU 限制（核心數）
CPU_LIMIT=1.0

# =============================================================================
# 備份配置
# =============================================================================

# 備份目錄
BACKUP_DIR=./backups

# 備份保留天數
BACKUP_RETENTION_DAYS=30 